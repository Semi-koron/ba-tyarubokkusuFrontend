{
	"$schema": "https://biomejs.dev/schemas/1.5.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": ["./**/*/tsconfig.*.json", "./.lintstagedrc.cjs"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"useHookAtTopLevel": "error"
			}
		}
	}
}
